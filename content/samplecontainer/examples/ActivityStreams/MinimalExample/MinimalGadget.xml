<?xml version="1.0" encoding="UTF-8"?>
<Module>
	<ModulePrefs title="Minimal gadget">
		<Require feature="opensocial-0.9"/>
		<Require feature="osapi"/>
		<Require feature="dynamic-height"/>
	</ModulePrefs>
	<Content type="html">
		<![CDATA[
			<script type="text/javascript" src="GraaaspOpenSocialWrapper.js"></script>
			<script type="text/javascript" src="MinimalRenderer.js"></script>

			<script type="text/javascript">
			social = new GraaaspOpenSocialWrapper();
			render = new MinimalRenderer();

			// Adjusts the window height
			function refresh() {
				gadgets.window.adjustHeight();
			}
		
			// Initializes the gadget
			function init() {
				render.renderWelcome('welcome', refresh);
				render.renderActivities('activities', refresh, "all", 50);
			}
			gadgets.util.registerOnLoadHandler(init);
			</script>
			<style> body {background-color: transparent;} </style>
			<div id='welcome'></div>
			<div id='form'>
			<form name='activities' action='' method='get'>
				Action : 
				<select name="verb">
  					<option value="all">all</option>
  					<option value="update">update</option>
  					<option value="invite_remind">invite_remind</option>
  					<option value="invite">invite</option>
  					<option value="request-join">request-join</option>
  					<option value="join">join</option>
  					<option value="remove">remove</option>
  					<option value="delete">delete</option>
  					<option value="access">access</option>
				</select>

				Number of results : <input type="number" name="quantity" min="1" max="1000" value="50">
				   <input type="button" name="button" value="Get activities" onClick="render.renderActivities('activities', refresh, this.form.verb.value, this.form.quantity.value)">
			</form></div>
			<div id='activities'></div>
		]]>
	</Content>
</Module>