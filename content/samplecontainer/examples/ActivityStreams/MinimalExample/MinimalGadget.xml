<?xml version="1.0" encoding="UTF-8"?>
<Module>
	<ModulePrefs title="Minimal gadget">
		<Require feature="opensocial-0.9"/>
		<Require feature="osapi"/>
		<Require feature="dynamic-height"/>
	</ModulePrefs>
	<Content type="html">
		<![CDATA[
			<script type="text/javascript" src="GraaaspOpenSocialWrapper.js"></script>
			<script type="text/javascript" src="MinimalRenderer.js"></script>

			<script type="text/javascript">
			social = new GraaaspOpenSocialWrapper();
			render = new MinimalRenderer();

			// Adjusts the window height
			function refresh() {
				gadgets.window.adjustHeight();
			}
		
			// Initializes the gadget
			function init() {
				render.renderWelcome('welcome', refresh);
				render.renderActivities('activities', refresh);
			}
			gadgets.util.registerOnLoadHandler(init);
			</script>
			<div id='welcome'></div>
			<div id='activities'></div>
		]]>
	</Content>
</Module>