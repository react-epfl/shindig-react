<?xml version="1.0" encoding="UTF-8"?>
<Module>
	<ModulePrefs title="Minimal gadget">
		<Require feature="opensocial-1.0"/>
		<Require feature="osapi"/>
		<Require feature="dynamic-height"/>
	</ModulePrefs>
	<Content type="html">
		<![CDATA[
			<style> body {background-color: transparent;} </style>
			<script type="text/javascript" src="GraaaspOpenSocialWrapper.js"></script>
			<script type="text/javascript" src="MinimalRenderer.js"></script>

			<script type="text/javascript">
			social = new GraaaspOpenSocialWrapper();
			render = new MinimalRenderer();

			function refresh() {
				gadgets.window.adjustHeight();
			}
		
			function init() {
				
				render.renderTitle('title', refresh);
				render.renderActivities(1411, '@user', refresh, "all", 1000);
			}

			function update(contextId, contextType, verb, quantity) {

			}
			gadgets.util.registerOnLoadHandler(init);
			</script>
			
			<div id='title'></div>
			<div id='get'></div>
			<div id='form_filter'>
				<form name='filter_activities' id='filter' action='' method='get'>
					<label for="verb">Action :</label> 
					<select name="verb" id="verb">
  						<option value="all">All</option>
  						<option value="update">Update</option>
  						<option value="invite_remind">Invite remind</option>
  						<option value="invite">Invite</option>
  						<option value="request-join">Request-join</option>
  						<option value="join">Join</option>
  						<option value="remove">Remove</option>
  						<option value="delete">Delete</option>
  						<option value="access">Access</option>
  						<option value="add">Add</option>
					</select>
					<label for="quantity">Number of results : </label>
					<input type="number" name="quantity" id="quantity" min="1" max="1000" value="50">
					<input type="button" name="button" value="Filter" onClick="render.updateActivities(refresh, this.form.verb.value, this.form.quantity.value)">
				</form>
			</div>
			<div id='activities'></div>
		]]>
	</Content>
</Module>